<Window x:Class="PhoneBookWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:PhoneBookWPF"
        mc:Ignorable="d" 
        Title="Телефонна книга" Height="600" Width="1090"
        Icon="/Images/phonebook_48px.png"
        ResizeMode="NoResize">
    
    <Grid ShowGridLines="False" 
          Height="584" 
          VerticalAlignment="Bottom">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35"/>
            <ColumnDefinition Width="185"/>
            <ColumnDefinition Width="850"/>
        </Grid.ColumnDefinitions>

        <!--Верхняя панель-->
        <StackPanel Orientation="Horizontal" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Grid.Row="0" Grid.Column="2" 
                    Margin="0 15 0 0">

            <TextBox IsReadOnly="True"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                Margin="5 5" Width="200"
                Text="{Binding RequestLogin.Email}"/>

            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    IsDefault="True"
                    Width="90" Height="30"
                    Cursor="Hand" 
                    Padding="0" 
                    ToolTip="Войти в программу под учетной записью"
                    Content="Логин" 
                    Margin="5 0 5 0"
                    Command="{Binding LoginCommand}"> 
            </Button>

            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    IsDefault="True"
                    Width="90" Height="30"
                    Cursor="Hand" 
                    Padding="0" 
                    Content="Регистрация"
                    ToolTip="Создать учетную запись"
                    Command="{Binding RegisterCommand}"
                    Margin="5 0 5 0">
            </Button>

            <Button Style="{StaticResource MaterialDesignFlatButton}"
                    IsDefault="True"
                    Width="90" Height="30"
                    Cursor="Hand" 
                    Padding="0" 
                    ToolTip="Выйдти из учетной записи"
                    Command="{Binding ExitCommand}"
                    Content="Выход" Margin="5 0 5 0">
            </Button>
        </StackPanel>

        <StackPanel Orientation="Vertical"
                    Grid.Column="0" Grid.Row="0"
                    Grid.RowSpan="2"
                    Margin="0 15 0 0">

            <Button VerticalAlignment="Bottom" 
                HorizontalAlignment="Center"
                Style="{StaticResource MaterialDesignFlatButton}"
                IsDefault="True"
                Width="30" Height="30"
                Margin="0 5"
                Cursor="Hand" 
                Padding="0" 
                ToolTip="Добавить запись">
                <materialDesign:PackIcon Kind="AccountPlusOutline" 
                                         Width="25" Height="25" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center" 
                                         Foreground="#FF71B73A"/>
            </Button>

            <Button VerticalAlignment="Bottom" 
                HorizontalAlignment="Center"
                Style="{StaticResource MaterialDesignFlatButton}"
                IsDefault="True"
                Width="30" Height="30"
                Cursor="Hand" 
                Margin="0 5"
                Padding="0" 
                ToolTip="Редактировать запись">
                <materialDesign:PackIcon Kind="EditOutline" 
                                         Width="25" Height="25" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center" 
                                         Foreground="#FF226DE7"/>
            </Button>

            <Button VerticalAlignment="Bottom" 
                HorizontalAlignment="Center"
                Style="{StaticResource MaterialDesignFlatButton}"
                IsDefault="True"
                Width="30" Height="30"
                Margin="0 5"
                Cursor="Hand" 
                Padding="0" 
                ToolTip="Удалить запись"
                Command="{Binding DeleteContactCommand}">
                <materialDesign:PackIcon Kind="AccountCancel" 
                                         Width="25" Height="25" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center" 
                                         Foreground="#FFB73A51"/>
            </Button>
        </StackPanel>

        <StackPanel Name="СustomerEditPanel"
                Orientation="Vertical"
                Grid.Column="1" Grid.Row="0"
                Grid.RowSpan="2"
                Margin="0 15 10 0"
                DataContext="{Binding ElementName=gridView, Path=SelectedItem}">

            <Label Content="Панель редактирования" 
                   Style="{StaticResource MaterialDesignLabel}" 
                   FontWeight="Bold" Foreground="#DD235DE4" HorizontalAlignment="Center"
                   />
            <TextBox x:Name="NameTextBox" 
                 materialDesign:HintAssist.Hint="Имя клиента" 
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Margin="5 5"
                 Text="{Binding FirstName}"/>
            <TextBox x:Name="SurNameTextBox" 
                 materialDesign:HintAssist.Hint="Фамилая клиента" 
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Margin="5 5"
                 Text="{Binding LastName}"/>
            <TextBox x:Name="PatronymicTextBox" 
                 materialDesign:HintAssist.Hint="Отчество клиента" 
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Margin="5 5"
                 Text="{Binding MiddleName}"/>
            <TextBox x:Name="TelefonTextBox" 
                 materialDesign:HintAssist.Hint="Номер телефона" 
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Margin="5 5"
                 Text="{Binding Telefon}"/>
            <TextBox x:Name="E_mailTextBox" 
                 materialDesign:HintAssist.Hint="Описание" 
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Margin="5 5"
                 Height="150"
                 Text="{Binding Description}"/>

        </StackPanel>

        <Border Grid.Column="2" Grid.Row="1"
            Background ="White" 
            CornerRadius="25"
            Margin="5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="50" Color="Green" ShadowDepth="0"/>
            </Border.Effect>

            <DataGrid x:Name="gridView"
              Margin="10"
              SelectionMode="Single"
              IsSynchronizedWithCurrentItem="True"
              AutoGenerateColumns="False" 
              ItemsSource="{Binding ContactView}"
              SelectedItem="{Binding CurrentContac, UpdateSourceTrigger=PropertyChanged}"
              IsReadOnly="False"
              CanUserAddRows="False">

                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="id"
                                Binding="{Binding Id}"
                                Header="ID"
                                IsReadOnly="True" 
                                Width="60"/>
                    <DataGridTextColumn x:Name="surname"
                                Binding="{Binding LastName}"
                                Header="Фамилия"
                                Width="120"/>
                    <DataGridTextColumn x:Name="name"
                                Binding="{Binding FirstName}"
                                Header="Имя"    
                                Width="100"/>
                    <DataGridTextColumn x:Name="patronymic"
                                Binding="{Binding MiddleName}"
                                Header="Отчество"
                                Width="150"/>
                    <DataGridTextColumn x:Name="telefon"
                                Binding="{Binding Telefon}"
                                Header="Телефон"  
                                Width="120"/>
                    <DataGridTextColumn x:Name="e_mail"
                                Binding="{Binding Address}"
                                Header="Адрес" 
                                Width="130"/>
                    <DataGridTextColumn Binding="{Binding Description}"
                                        Header="Примечание"
                                        Width="150"/>
                </DataGrid.Columns>
            </DataGrid>

            
        </Border>
        
        <StatusBar Grid.Row="3" Grid.ColumnSpan="3" Grid.Column="0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusBarText}" />
            </StatusBarItem>
        </StatusBar>

    </Grid>
</Window>
